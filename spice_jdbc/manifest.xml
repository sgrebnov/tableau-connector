  </vendor-information>
  <connection-customization class="spice_jdbc" enabled="true" version="10.0">
    <vendor name="Spice"/>
    <driver name="Spice"/>
    <customizations>
      <!-- https://tableau.github.io/connector-plugin-sdk/docs/capabilities -->
      <customization name="CAP_JDBC_METADATA_READ_FOREIGNKEYS" value="no" />
